{
  "include": ["./src/**/*", "./playwright.config.ts"],
  "exclude": ["./node_modules", "./dist", "./artifacts", "./playwright-report"],
  "compilerOptions": {    
    "target": "ES2020",    
    "module": "commonjs",
    "rootDir": "./",    
    "outDir": "./dist",    
    "esModuleInterop": true,    
    "forceConsistentCasingInFileNames": true,    
    "strict": true,    
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["node", "@playwright/test"]
  }
}
