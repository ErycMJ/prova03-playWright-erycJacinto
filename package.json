{
  "name": "playwright-e2e",
  "version": "1.0.0",
  "description": "E2E tests using MS Playwright",
  "main": "index.js",
  "author": "ugioni",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@zerostep/playwright": "^0.1.5",
    "mkdirp": "^3.0.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "@playwright/test": "1.56.1",
    "nvm": "^0.0.4",
    "playwright": "1.56.1",
    "sicolo": "^1.0.1"
  },
  "scripts": {
    "test": "npx playwright test",
    "ci": "npx playwright test --config=playwright-ci.config.ts --reporter=line",
    "actions": "npx playwright test --config=playwright-ci.config.ts --reporter=line",
    "show-report": "npx playwright show-report",
    "clean": "rimraf playwright-report test-results artifacts .auth",
    "format": "prettier --write \"**/**.[jt]s?(x)\"",
    "verify": "prettier --check \"**/**.[jt]s?(x)\"",
    "debug": "npx playwright test --debug --workers 1",
    "ui": "npx playwright test --ui --workers 1",
    "scenario": "npx playwright test src/scenarios/ContatoEmpresa.spec.ts --workers 1"
  }
}
